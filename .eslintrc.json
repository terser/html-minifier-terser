{
  "extends": "standard",
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "never"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "src/*.js",
        "assets/*.js"
      ],
      "env": {
        "browser": true
      }
    },
    {
      "files": "tests/*.js",
      "env": {
        "browser": true,
        "jest": true
      }
    }
  ]
}
