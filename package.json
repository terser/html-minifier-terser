{
  "author": "Jens Oliver Meiert",
  "bin": {
    "html-minifier-guard": "./cli.js"
  },
  "bugs": "https://github.com/j9t/html-minifier-guard/issues",
  "dependencies": {
    "camel-case": "^5.0.0",
    "clean-css": "~5.3.2",
    "commander": "^13.1.0",
    "entities": "^6.0.0",
    "param-case": "^3.0.4",
    "relateurl": "^0.2.7",
    "terser": "^5.15.1"
  },
  "description": "Highly configurable, well-tested, JavaScript-based HTML minifier.",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@jest/globals": "^29.5.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.3",
    "alpinejs": "^3.12.2",
    "commitlint-config-non-conventional": "^1.0.1",
    "eslint": "^9.25.1",
    "eslint-config-standard": "^17.1.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.3",
    "rollup": "^3.26.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "vite": "^4.5.14"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/htmlminifier.js",
      "require": "./dist/htmlminifier.cjs"
    },
    "./dist/*": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "cli.js",
    "dist/",
    "src/"
  ],
  "homepage": "https://j9t.github.io/html-minifier-guard/",
  "keywords": [
    "cli",
    "compress",
    "compressor",
    "css",
    "html",
    "htmlmin",
    "javascript",
    "min",
    "minification",
    "minifier",
    "minify",
    "optimize",
    "optimizer",
    "pack",
    "packer",
    "parse",
    "parser",
    "terser",
    "uglifier",
    "uglify"
  ],
  "license": "MIT",
  "main": "./dist/htmlminifier.cjs",
  "module": "./src/htmlminifier.js",
  "name": "html-minifier-guard",
  "repository": "https://github.com/j9t/html-minifier-guard.git",
  "scripts": {
    "build": "rollup -c",
    "build:docs": "vite build --base /html-minifier-guard/",
    "lint": "eslint . --ignore-path .gitignore",
    "prepare": "is-ci || husky install",
    "serve": "npm run build && vite",
    "test": "npm run test:node",
    "test:node": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest verbose --watch",
    "test:web": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --environment=jsdom",
    "deploy": "npm run build:docs"
  },
  "type": "module",
  "version": "7.2.0"
}